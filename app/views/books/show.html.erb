<div class="container">
  <div class="row">
    <%= render 'info', user: @user, book: @book_new %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= image_tag @book.user.get_profile_image(40,40) %><br>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <td>
              <%= link_to 'Edit', edit_book_path(@book.id), class: 'btn btn-sm btn-success' %>
            </td>
            <td>
              <%= link_to 'Destroy', book_path(@book), method: :delete, class: 'btn btn-sm btn-danger', 'data_config' =>"本当に消しますか？" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

